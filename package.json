{
  "name": "oneshotlife-apiserver",
  "version": "1.0.0",
  "main": "src/app.ts",
  "repository": "https://github.com/One-Shot-Life/OneShotLife-APIServer.git",
  "author": "steven-yn",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:watch": "nodemon --watch ts-node src/app.ts",
    "start:forever": "forever src/app.ts",
    "lint": "eslint --fix prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint --fix && prettier --write"
    }
  },
  "lint-staged": {
    "./**/*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql2": "^3.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@typescript-eslint/utils": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "forever": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "pm2": "^5.3.0",
    "prettier": "^2.8.6"
  }
}
